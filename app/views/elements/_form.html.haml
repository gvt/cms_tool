= form_for(@element) do |f|
	-if @element.errors.any?
		#error_explanation
			%h2
				= pluralize(@element.errors.count, "error")
				prohibited this element from being saved:
			%ul 
				-@element.errors.full_messages.each do |msg|
					%li
						= msg
	
	.field
		= f.label :name
		%br
		= f.text_field :name

	.field
		= f.label :body
		%br
		= f.text_area :body

	.field
		= f.label :owner 
		%br
		=collection_select(:element, :owner_id , @users, :id, :name, :include_blank => true)

	.field
		= f.label :publish_effective_at 
		%br
		= f.datetime_select :publish_effective_at 
		%br

	.actions
		= f.submit

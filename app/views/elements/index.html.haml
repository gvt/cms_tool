%h1 Listing elements

%table
	%tr
		%th Name
		%th Owner
		%th Publish Date
		%th Body
	
	- @elements.each do |element| 
		%tr
			%td= element.name
			%td= element.owner.name
			%td= element.publish_effective_at
			%td= "#{element.body.size} characters"
			%td= link_to 'Show', element
			%td= link_to 'Edit', edit_element_path(element)
			%td= link_to 'Destroy', element, :confirm => 'Are you sure?', :method => :delete 

%br

= link_to 'New Element', new_element_path


!!!
%html
	%head
		%title CMS Tool
		= stylesheet_link_tag :all
		= javascript_include_tag :defaults
		= csrf_meta_tag

%body
	#user_nav
		- if current_user
			= "Signed in as #{current_user.login}. Not you?"
			= link_to "Sign out", logout_path
		- else
			= link_to "Sign in", new_user_session_path

	= yield

